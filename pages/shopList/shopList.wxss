.cell_content{
  display: flex;
  flex-direction: column;
}
.cell_content_left{
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}
.cell_image{
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  width: auto;
  background-color: #c0c6cf
}
.cell_text_name{
  text-align:left;
  font-weight:normal;
  font-size:18px;
  padding-top: 40rpx;
  padding-left: 20rpx;
}
.cell_text_descr{
  text-align:left;
  font-weight:normal;
  font-size:14px;
  padding-top: 10rpx;
  padding-left: 20rpx;
  color: #aab1bd;
}
.cell_text_price{
  text-align:left;
  font-weight:normal;
  font-size:14px;
  padding-top: 10rpx;
  padding-left: 20rpx;
  color: #dd0e0e;
}
.cell_line{
  width: 100%;
  background-color: #e3e5e9;
  height: 10rpx;
}
.cell_favourite_image{
  margin-left: 20rpx;
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 20rpx;
}
.button_contact{
  position: fixed;
  height: 88rpx;
  bottom: 60rpx;
  right: 30rpx;
  background-color: rgba(255, 255, 255, 0);
}
.button_contact::after{
  border: 0rpx;
}
.image_contact{
  width: 88rpx;
  height: 88rpx;
  z-index: 9999;
}